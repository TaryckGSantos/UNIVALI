struct Plataforma {
    std::vector<Campeonato> campeonatos;

    void criarCampeonato(const std::string& nome) {
        campeonatos.push_back({ nome });
        std::cout << "Campeonato '" << nome << "' criado com sucesso.\n";
    }

    void eliminarCampeonato(const std::string& nome) {
        for (auto it = campeonatos.begin(); it != campeonatos.end(); ++it) {
            if (it->nome == nome) {
                campeonatos.erase(it);
                std::cout << "Campeonato '" << nome << "' eliminado com sucesso.\n";
                return;
            }
        }
        std::cout << "Campeonato '" << nome << "' nÃ£o encontrado.\n";
    }

    void verCampeonatos() {
        std::cout << "Campeonatos existentes:\n";
        for (const auto& campeonato : campeonatos) {
            std::cout << "- " << campeonato.nome << "\n";
        }
    }
};
